@{
    string idNumber = "";
    string name = "";
    string courseCode = "";
    
    StreamReader reader;
    List<String> followedCourses = new List<String>();
    List<String> favoritesList = new List<String>();

    if (IsPost) {
        idNumber = @Request["loginId"];
        reader = new StreamReader("D:/Files/" + idNumber + "/Info.txt");
        name = reader.ReadLine();
        reader.Close();
    }
    else {
        reader = new StreamReader("D:/Files/11110104/Info.txt");
        name = reader.ReadLine();
        reader.Close();
    }

    courseCode = @Request["course"];
    reader = new StreamReader("D:/Files/11110104/Favorites.txt");
    string fav;
    while ((fav = reader.ReadLine()) != null)
        favoritesList.Add(fav);
        
    reader.Close();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>CSlibrary</title>

    <!-- Bootstrap core -->
    <link rel="stylesheet" href="Content/bootstrap.min.css" />

    <!-- Custom Google Web Font -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Lato:400,700" />

    <!-- Animations -->
    <link rel="stylesheet" href="Content/animations.css" />

    <!-- Custom stylesheets -->
    <link rel="stylesheet" href="Content/landing-page.css" />
    <link rel="stylesheet" href="Content/offcanvas.css" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="Main.cshtml">CSlibrary</a>
            </div>

            <div class="collapse navbar-collapse">

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="ViewCourses.cshtml">View Courses</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@name</a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li><a href="Logout.cshtml">Log out</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-bell"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Notification 1</a></li>
                            <li><a href="#">Notification 2</a></li>
                            <li><a href="#">Notification 3</a></li>
                            <li><a href="#">Notification 4</a></li>
                            <li><a href="#">Notification 5</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row row-offcanvas row-offcanvas-left">
            <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
                <div class="panel panel-default">
                    <div class="panel-heading">My courses</div>
                    @{
                        reader = new StreamReader("D:/Files/11110104/Followed.txt");
                        if (reader.EndOfStream) {
                            @:<div class="panel-body">
                            @:<p class="nav nav-pills nav-stacked">You are not following any courses.</p>
                            @:</div>
                        }
                        else {
                            @:<ul class="nav nav-pills nav-stacked">

                            string line;
                            followedCourses = new List<string>();
                            while ((line = reader.ReadLine()) != null) {
                                followedCourses.Add(line);
                            }
                            
                            followedCourses.Sort();

                            foreach (string course in followedCourses) {
                                @:<li><a href="Files.cshtml?course=@course">@course <span class="label label-success pull-right"></span></a></li>
                            }

                            @:</ul>
                        }
                        reader.Close();
                    }
                    <!--
                       
                   
                    -->
                    
                </div>
            </div>


            <div class="col-xs-12 col-sm-9">
                <p class="pull-left visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                </p>

                <ol class="breadcrumb">
                    <li><a href="Main.cshtml">CSlibrary</a></li>
                    @{
                        if (!courseCode.Equals("")) {
                            @:<li class="active"><a href="Files.cshtml?course=@courseCode">@courseCode</a></li>
                        }
                    }
                    <!--
                        <li><a href="#">PROFSWD</a></li>
                        <li class="active">S17</li>    
                    -->
                </ol>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="50"</th>
                            <th width="400">Name</th>
                            <th></th>
                            <th>Time Uploaded</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            string filename;
                            reader = new StreamReader("D:/Files/Downloads/" + courseCode + ".txt");
                            while ((filename = reader.ReadLine()) != null) {
                                @:<tr>
                                @:    <td></td>
                                @:    <td><a class="btn-link" href="Files/@courseCode/@filename">@filename</a></td>
                                @:    <td></td>
                                 bool favorited = false;
                                foreach (string favorite in favoritesList) {
                                    if (favorite.Contains(filename)) {
                                        favorited = true;
                                        break;
                                    }
                                }
                                
                                if (favorited) {
                                    @:    <td>3/22/2014 <a class="btn btn-success btn-xs pull-right" href="Unfavorite.cshtml?courseCode=@courseCode&file=@filename"><span class="glyphicon glyphicon-star"></span></a></td>
                                }
                                else {
                                    @:    <td>3/22/2014 <a class="btn btn-default btn-xs pull-right" href="Favorite.cshtml?courseCode=@courseCode&file=@filename"><span class="glyphicon glyphicon-star"></span></a></td>    
                                }
                                @:</tr>
                            }
                            reader.Close();
                        }
                    </tbody>
                </table>
            </div><!--/span-->
        </div><!--/row-->
        <hr>
    </div><!--/.container-->

    <footer>
        <div class="container">
            <p class="copyright text-muted small">Copyright &copy; 2014 WEBAPPS Buddies. All Rights Reserved</p>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="Scripts/jquery-1.9.0.min.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('[data-toggle=offcanvas]').click(function () {
                $('.row-offcanvas').toggleClass('active');
            });
        });
    </script>
</body>
</html>
