@{
    string idNumber = "";
    string name = "";

    StreamReader reader;
    List<String> followedCourses = new List<String>();
    List<String> favoritesList = new List<String>();
    List<String> recentList = new List<String>();

    if (IsPost) {
        idNumber = @Request["loginId"];

        if (idNumber.Contains("970"))
            Response.Redirect("ProfMain.cshtml");
        
        reader = new StreamReader("D:/Files/" + idNumber + "/Info.txt");
        name = reader.ReadLine();
        reader.Close();
    }
    else {
        reader = new StreamReader("D:/Files/11110104/Info.txt");
        name = reader.ReadLine();
        reader.Close();
    }

    reader = new StreamReader("D:/Files/Recent.txt");
    string update;
    while ((update = reader.ReadLine()) != null) {
        recentList.Add(update);
    }
    reader.Close();

    reader = new StreamReader("D:/Files/11110104/Favorites.txt");
    string fav;
    while ((fav = reader.ReadLine()) != null) {
        favoritesList.Add(fav);
    }
    reader.Close();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>CSlibrary</title>

    <!-- Bootstrap core -->
    <link rel="stylesheet" href="Content/bootstrap.min.css" />

    <!-- Custom Google Web Font -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Lato:400,700" />

    <!-- Animations -->
    <link rel="stylesheet" href="Content/animations.css" />

    <!-- Custom stylesheets -->
    <link rel="stylesheet" href="Content/landing-page.css" />
    <link rel="stylesheet" href="Content/offcanvas.css" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="Main.cshtml">CSlibrary</a>
            </div>

            <div class="collapse navbar-collapse">

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="ViewCourses.cshtml">View Courses</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@name</a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li><a href="Logout.cshtml">Log out</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-bell"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Notification 1</a></li>
                            <li><a href="#">Notification 2</a></li>
                            <li><a href="#">Notification 3</a></li>
                            <li><a href="#">Notification 4</a></li>
                            <li><a href="#">Notification 5</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row row-offcanvas row-offcanvas-left">
            <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
                <div class="panel panel-default">
                    <div class="panel-heading">My courses</div>
                    @{
                        reader = new StreamReader("D:/Files/11110104/Followed.txt");
                        if (reader.EndOfStream) {
                            @:<div class="panel-body">
                            @:<p class="nav nav-pills nav-stacked">You are not following any courses.</p>
                            @:</div>
                        }
                        else {
                            @:<ul class="nav nav-pills nav-stacked">

                            string line;
                            followedCourses = new List<string>();
                            while ((line = reader.ReadLine()) != null) {
                                followedCourses.Add(line);
                            }

                            followedCourses.Sort();

                            foreach (string course in followedCourses) {
                                @:<li><a href="Files.cshtml?course=@course">@course <span class="label label-success pull-right"></span></a></li>
                            }

                            @:</ul>
                        }
                        reader.Close();
                    }
                    <!--


                    -->

                </div>
            </div>


            <div class="col-xs-12 col-sm-9">
                <p class="pull-left visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                </p>

                <ol class="breadcrumb">
                    <li><a href="#">CSlibrary</a></li>
                </ol>

                <div class="col-xs-6 col-sm-6">
                    <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <div class="panel-heading">My favorites</div>

                        @{
                            if (favoritesList.Count == 0) {
                                @:<div class="panel-body">
                                @:    <p>You have no favorites.</p>
                                @:</div>
                            }
                            else {
                                @:<ul class="list-group">
                                
                                foreach (string favorite in favoritesList) {
                                    string course = favorite.Split('|')[0];
                                    string filename = favorite.Split('|')[1];
                                    @:<li class="list-group-item"><a class="btn-link" href="Files/@course/@filename">@filename</a> <a class="btn btn-success btn-xs pull-right" href="#"><span class="glyphicon glyphicon-star"></span></a></li>
                                }
                                
                                @:</ul>
                            }
                        }
                    </div>
                </div>

                <div class="col-xs-6 col-sm-6">
                    <div class="panel panel-default">
                        <!-- Default panel contents -->
                        <div class="panel-heading">Recent uploads</div>

                        @{
                            if (recentList.Count == 0 || followedCourses.Count == 0) {
                                @:<div class="panel-body">
                                @:    <p>You have no recent updates.</p>
                                @:</div>
                            }
                            else {
                                @:<ul class="list-group">
                                foreach (string recentFile in recentList) {
                                    string course = recentFile.Split('|')[0];
                                    string filename = recentFile.Split('|')[1];

                                    if (followedCourses.Contains(course)) {
                                        @:<li class="list-group-item"><a class="btn-link" href="Files/@course/@filename">@filename</a> <span class="label label-success pull-right">@course</span></li>
                                    }
                                }
                                @:</ul>
                            }
                            
                            
                         }
                    </div>
                </div>
            </div><!--/span-->
        </div><!--/row-->
        <hr>
    </div><!--/.container-->

    <footer>
        <div class="container">
            <p class="copyright text-muted small">Copyright &copy; 2014 WEBAPPS Buddies. All Rights Reserved</p>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="Scripts/jquery-1.9.0.min.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('[data-toggle=offcanvas]').click(function () {
                $('.row-offcanvas').toggleClass('active');
            });
        });
    </script>
</body>
</html>
