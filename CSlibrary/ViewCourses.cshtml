        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="Main.cshtml">CSlibrary</a>
            </div>

            <div class="collapse navbar-collapse">

                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="ViewCourses.cshtml">View Courses</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Nico Elayda</a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li><a href="Logout.cshtml">Log out</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-bell"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Notification 1</a></li>
                            <li><a href="#">Notification 2</a></li>
                            <li><a href="#">Notification 3</a></li>
                            <li><a href="#">Notification 4</a></li>
                            <li><a href="#">Notification 5</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row row-offcanvas row-offcanvas-left">
            <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
                <div class="panel panel-default">
                    <div class="panel-heading">My courses</div>
                    @{
                        reader = new StreamReader("D:/Files/11110104/Followed.txt");
                        if (reader.EndOfStream) {
                            @:<div class="panel-body">
                            @:<p class="nav nav-pills nav-stacked">You are not following any courses.</p>
                            @:</div>
                        }
                        else {
                            @:<ul class="nav nav-pills nav-stacked">


                            string line;
                            followedCourses = new List<string>();
                            while ((line = reader.ReadLine()) != null) {
                                followedCourses.Add(line);
                            }
                            
                            followedCourses.Sort();

                            foreach (string course in followedCourses) {
                                @:<li><a href="Files.cshtml?course=@course">@course <span class="label label-success pull-right"></span></a></li>
                            }

                            @:</ul>
                        }
                        reader.Close();
                    }
                    <!--


                    -->

                </div>
            </div>


            <div class="col-xs-12 col-sm-9">
                <p class="pull-left visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                </p>

                <div class="panel panel-default">
                    <div class="panel-heading">Course List</div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th width="50"</th>
                                <th width="400">Course Code</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                reader = new StreamReader("D:/Files/Courses.txt");
                                string courseCode;
                                while ((courseCode = reader.ReadLine()) != null) {
                                    @:<tr>
                                    @:    <td width="50"></td>
                                    @:    <td><a class="btn-link" href="Files.cshtml?course=@courseCode">@courseCode</a></td>
                                    if (followedCourses.Contains(courseCode)) {
                                        @:<td><a href="Unfollow.cshtml?courseCode=@courseCode" class="btn btn-success pull-right">Following</a></td>
                                    }
                                    else {
                                        @:<td><a href="Follow.cshtml?courseCode=@courseCode" class="btn btn-default pull-right">Follow</a></td>
                                    }
                                    
                                    @:    <td></td>
                                    @:</tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div><!--/span-->
        </div><!--/row-->
        <hr>
    </div><!--/.container-->

    <div class="container">
        
    </div><!--/.container-->

    <footer>
        <div class="container">
