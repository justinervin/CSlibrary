@{
    //string idNumber = Request["idNumber"];
    string courseCode = Request["courseCode"];
    string fileName = Request["file"];

    fileName = fileName.Replace("%20", " ");
    
    List<String> favoritesList = new List<String>();

    StreamReader reader = new StreamReader("D:/Files/11110104/Favorites.txt");
    string line;
    while ((line = reader.ReadLine()) != null) {
        if (!line.Equals(courseCode + "|" + fileName)) {
            favoritesList.Add(line);
        }

    }
    reader.Close();

    StreamWriter writer = new StreamWriter("D:/Files/11110104/Favorites.txt");
    foreach (string favorite in favoritesList) {
        writer.WriteLine(favorite);
    }
    writer.Close();

    Response.Redirect("~/Files.cshtml?course=" + courseCode);
}